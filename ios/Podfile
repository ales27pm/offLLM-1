# ios/Podfile

require_relative '../node_modules/react-native/scripts/react_native_pods'
require_relative '../node_modules/@react-native-community/cli-platform-ios/native_modules'

platform :ios, '15.1'
prepare_react_native_project!

# If you use react-native-config or other env tools, keep your existing setup here.

target 'monGARS' do
  config = use_native_modules!

  use_react_native!(
    :path => config[:reactNativePath],
    :app_path => "#{Pod::Config.instance.installation_root}/.."
  )

  # --- YOUR OTHER PODS HERE ---
  # pod 'SomePod'
  # pod 'AnotherPod'
  # ---------------------------

  post_install do |installer|
    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false
    )

    # âœ… Critical: NEVER codesign Pods (static libs / bundles) in CI
    installer.pods_project.targets.each do |t|
      t.build_configurations.each do |bc|
        bc.build_settings['CODE_SIGNING_ALLOWED'] = 'NO'
        bc.build_settings['CODE_SIGNING_REQUIRED'] = 'NO'
        bc.build_settings['CODE_SIGN_IDENTITY'] = ''
        bc.build_settings['CODE_SIGN_IDENTITY[sdk=iphoneos*]'] = ''
        bc.build_settings['EXPANDED_CODE_SIGN_IDENTITY'] = ''
        bc.build_settings['EXPANDED_CODE_SIGN_IDENTITY[sdk=iphoneos*]'] = ''
      end
    end

    # Also disable signing for resource bundle targets generated by pods (extra-safe)
    installer.aggregate_targets.each do |aggregate_target|
      aggregate_target.user_project.native_targets.each do |native_target|
        native_target.build_configurations.each do |bc|
          bc.build_settings['CODE_SIGNING_ALLOWED'] = 'NO'
          bc.build_settings['CODE_SIGNING_REQUIRED'] = 'NO'
          bc.build_settings['CODE_SIGN_IDENTITY'] = ''
          bc.build_settings['CODE_SIGN_IDENTITY[sdk=iphoneos*]'] = ''
          bc.build_settings['EXPANDED_CODE_SIGN_IDENTITY'] = ''
          bc.build_settings['EXPANDED_CODE_SIGN_IDENTITY[sdk=iphoneos*]'] = ''
        end
      end
    end
  end
end
