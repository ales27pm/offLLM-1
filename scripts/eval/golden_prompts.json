    {
      "stable_id": "tool-json-basics",
      "title": "Tool call JSON basics",
      "user_prompt": "Call the weather tool for Toronto tomorrow.",
      "tools": [
        {
          "name": "weather",
          "description": "Get weather forecast for a location.",
          "parameters": {
            "location": { "type": "string", "required": true },
            "start": { "type": "string", "required": false },
            "duration": { "type": "number", "required": false }
          }
        }
      ],
      "context": [
        { "content": "User wants tomorrow's forecast for Toronto." }
      ],
      "expected": {
        "tool_calls": [
          {
            "name": "weather",
            "args": { "location": "Toronto, ON", "duration": 2 }
          }
        ],
        "json_valid": true,
        "refusal": false,
        "citations_required": false
      },
      "sarif_category": "tool-call"
    },
