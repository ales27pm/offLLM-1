{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://offllm.ai/schemas/telemetry_event.schema.json",
  "title": "TelemetryEvent",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "event_type",
    "timestamp",
    "prompt_id",
    "prompt_version",
    "model_id",
    "tool_calls",
    "retrieval_hits",
    "outcome",
    "latency",
    "redaction_applied"
  ],
  "properties": {
    "schema_version": { "type": "string" },
    "event_type": {
      "type": "string",
      "enum": [
        "prompt_received",
        "tool_invocation",
        "retrieval",
        "final_response"
      ]
    },
    "timestamp": { "type": "string" },
    "prompt_id": { "type": "string" },
    "prompt_version": { "type": "string" },
    "model_id": { "type": "string" },
    "tool_calls": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["name", "args"],
        "properties": {
          "name": { "type": "string" },
          "args": {
            "type": ["object", "array", "string", "number", "boolean", "null"]
          },
          "success": { "type": ["boolean", "null"] },
          "error": { "type": ["string", "null"] }
        }
      }
    },
    "retrieval_hits": { "type": "array", "items": { "type": "string" } },
    "outcome": { "type": "string" },
    "latency": { "type": "number" },
    "redaction_applied": { "type": "boolean" },
    "prompt_hash": { "type": "string" },
    "prompt_preview": { "type": "string" },
    "tool_schema_version": { "type": "string" },
    "tool_name": { "type": "string" },
    "tool_args_hash": { "type": "string" },
    "tool_args_preview": {
      "type": ["object", "array", "string", "number", "boolean", "null"]
    },
    "tool_result_size": { "type": "integer" },
    "success": { "type": "boolean" },
    "latency_ms": { "type": "number" },
    "error": { "type": ["string", "null"] },
    "response_hash": { "type": "string" },
    "response_preview": { "type": "string" },
    "tool_calls_count": { "type": "integer" },
    "query_hash": { "type": "string" },
    "query_preview": { "type": "string" },
    "result_ids": { "type": "array", "items": { "type": "string" } },
    "max_results": { "type": "integer" },
    "retrieval_trace": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "candidate_ids": { "type": "array", "items": { "type": "string" } },
        "candidate_scores": { "type": "array", "items": { "type": "number" } }
      },
      "required": ["candidate_ids", "candidate_scores"]
    }
  }
}
