{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://offllm.ai/schemas/tools/web_search.schema.json",
  "title": "web_search",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "query": { "type": "string" },
    "maxResults": { "type": "number", "minimum": 1, "maximum": 20 },
    "provider": {
      "type": "string",
      "enum": ["google", "bing", "duckduckgo", "brave"]
    },
    "timeRange": {
      "type": "string",
      "enum": ["day", "week", "month", "year", "any"]
    },
    "safeSearch": { "type": "boolean" },
    "extractContent": { "type": "boolean" }
  },
  "required": ["query"]
}
