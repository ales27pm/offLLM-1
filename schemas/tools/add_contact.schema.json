{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://offllm.ai/schemas/tools/add_contact.schema.json",
  "title": "add_contact",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "name": { "type": "string" },
    "phone": { "type": "string", "pattern": "^\\+?[1-9]\\d{1,14}$" },
    "email": { "type": "string", "format": "email" }
  },
  "required": ["name"]
}
